.mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 998;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
}
.mask .mask-com{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 999;
  width: 520rpx;
  height: 630rpx;
  margin-top: -315rpx;
  margin-left: -260rpx;
  background-color: #fff;
}
.hidden {
  /* opacity: 0; */
