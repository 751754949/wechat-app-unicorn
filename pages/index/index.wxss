.special-topic{
  position: relative;
  display: flex;
  flex-direction: row;
  padding-top: 39rpx;
  padding-bottom: 39rpx;
}
.special-topic::after{
   display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  content: '';
  height:1px;
  background: #ddd;
  -webkit-transform:scaleY(.5);
  -ms-transform:scaleY(.5);
  -o-transform:scaleY(.5);
  transform:scaleY(.5);
}
.special-topic .topic-item{
  flex: 1;
  text-align: center;
}
.special-topic .topic-item image{
  width: 99rpx;
  height: 99rpx;
}
.special-topic .topic-item text{
  display: block;
}
