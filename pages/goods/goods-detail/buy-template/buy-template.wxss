}
.buy-info .right-com .intergral-num {
  font-size: 40rpx;
}
.buy-info .right-com .intergral-text {
  font-size: 30rpx;
  color: rgb(68, 68, 68);
  margin-left: 20rpx;
}

.buy-info .right-com .stock-text {
  font-size: 30rpx;
  color: rgb(68, 68, 68);
}

.buy-info .right-com .notice-text {
  margin-top: 20rpx;
  font-size: 30rpx;
