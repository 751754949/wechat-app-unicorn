.buy-container {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.top-close {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 30rpx;
  padding-top: 24rpx;
  padding-bottom: 22rpx;
}
.top-close::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  content: '';
  height: 1px;
  background: rgb(229, 229, 229);
  -webkit-transform: scaleY(0.5);
  -ms-transform: scaleY(0.5);
  -o-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.top-close .left-text {
  font-size: 30rpx;
}

.top-close .right-close {
  width: 32rpx;
  height: 32rpx;
}
.buy-main{
  height: 1048rpx;
  overflow-y: auto;
}
.buy-info {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
.buy-info image {
