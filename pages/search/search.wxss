@import "../goods/goods-template/goods-template.wxss";
page{
  background: #fff;
}
.container {
  display: flex;
  flex-direction: column;
}
.head-search{
  display: flex;
  justify-content: space-between;
  padding: 0rpx 30rpx;
  height: 80rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.head-search image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.head-search input{
  width: 500rpx;
  height: 50rpx;
  font-size: 32rpx;
  margin-top: 15rpx;
}
.head-search .right-a{
  width: 120rpx;
  height: 40rpx;
  text-align: center;
    font-size: 32rpx;                                                                   
  margin-top: 16rpx;
  border-left: 1px solid #ccc;
}
.hot-wrapper{
  padding: 30rpx;
}
.hot-wrapper .title{
  font-size: 32rpx;
}
.hot-wrapper .hot-words{
  margin-top: 30rpx;
}
.hot-wrapper .hot-words .word{
  display: inline-block;
  background-color: #e4e8f1;
  padding: 10rpx 16rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
.category{
display: flex;
padding: 20rpx 30rpx;
margin-top: 10rpx;
}
.category .category-item{
  flex: 1;
  color: #888;
  text-align: center;
}
.category .category-item.cur{
  color: #000;
}
.goods-list{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
